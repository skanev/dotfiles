# MS Word documents
application/msword; ~/.mutt/bin/view-attachment %s "-" '/Applications/TextEdit.app'

# Images
image/jpg;   ~/.mutt/bin/view-attachment %s jpg
image/jpeg;  ~/.mutt/bin/view-attachment %s jpg
image/pjpeg; ~/.mutt/bin/view-attachment %s jpg
image/png;   ~/.mutt/bin/view-attachment %s png
image/gif;   ~/.mutt/bin/view-attachment %s gif

# PDFs
application/pdf; ~/.mutt/bin/view-attachment %s pdf

# HTML
text/html; ~/.mutt/bin/view-attachment %s html

# Unidentified files
application/octet-stream; ~/.mutt/bin/view-attachment %s "-"
